model Workspace {
  id        String   @id @default(cuid())
  name      String
  slug      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
  userId    String
  Invite    Invite[]

  @@unique([slug])
  @@index([userId])
}

model Invite {
  id          String    @id @default(cuid())
  email       String
  token       String
  expires     DateTime
  Workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String

  @@index([workspaceId])
}
